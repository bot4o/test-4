@model WebApplication7.Models.Book;
<style>
     form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    .border {
        padding: 50px;
        background-color: black;
        color: #fff;
        border-radius: 10px;
    }
</style>
<div class="container">
    <form method="post" asp-action="Create">
        <div class="border">
            <div class="row">
                <div class="form-group row">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control">
                </div>
                <div class="form-group row">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" class="form-control">
                </div>
                <div class="form-group row">
                    <label asp-for="Genre"></label>
                    <input asp-for="Genre" class="form-control">
                </div>
                <div class="form-group row">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                </div>
                <div class="form-group row">
                    <label asp-for="YearOfPublication"></label>
                    <input asp-for="YearOfPublication" class="form-control">
                </div>
                <div class="form-group row">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control">
                </div>
                <div class="form-group row">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control">
                </div>
                <div class="form-group row">
                    <input type="submit" class="btn btn-info w-100" value="Create">
                    <a asp-action="Index" class="btn btn-success w-100">Back</a>
                </div>
            </div>
        </div>
    </form>
</div>
